{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "üè† LOCAL - Debug Nest Framework",
      "protocol": "auto",
      "runtimeVersion": "14.17.3",
      "args": ["${workspaceFolder}/src/main.ts"],
      "runtimeArgs": [
        "--max-http-header-size=81000",
        "--nolazy",
        "-r",
        "ts-node/register",
        "-r",
        "tsconfig-paths/register"
      ],
      "internalConsoleOptions": "openOnSessionStart",
      "outputCapture": "std",
      "sourceMaps": true,
      "env": {
        "NODE_ENV": "local"
      },
      "cwd": "${workspaceRoot}"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "üöÄ DEVELOPMENT",
      "protocol": "auto",
      "runtimeVersion": "14.15.5",
      "args": ["${workspaceFolder}/src/main.ts"],
      "runtimeArgs": [
        "--max-http-header-size=81000",
        "--nolazy",
        "-r",
        "ts-node/register",
        "-r",
        "tsconfig-paths/register"
      ],
      "internalConsoleOptions": "openOnSessionStart",
      "outputCapture": "std",
      "sourceMaps": true,
      "env": {
        "NODE_ENV": "dev"
      },
      "cwd": "${workspaceRoot}"
    },
    {
      "type": "node",
      "name": "TEST LOCAL - Debug Jest Tests",
      "request": "launch",
      "runtimeVersion": "14.15.5",
      "runtimeArgs": [
        "--inspect-brk",
        "${workspaceRoot}/node_modules/.bin/jest",
        "--runInBand",
        "--coverage",
        "false"
      ],
      "console": "integratedTerminal",
      "env": {
        "NODE_ENV": "test"
      }
    }
  ]
}
